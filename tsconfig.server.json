// tsconfig.server.json
{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/server",
    "target": "ES2022",
    "types": ["node"],
    "module": "ES2022",
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmit": false
  },
  "files": ["src/main.server.ts"],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false
  }
}
